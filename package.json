{
  "engines": {
    "node": ">=24.10.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "postinstall": "bash scripts/install_hooks.sh",
    "build": "node scripts/run-build.js",
    "bootstrap:init": "node --import tsx tools/bootstrap/index.ts",
    "test:bootstrap": "vitest run tools/bootstrap/index.test.ts",
    "readme:bootstrap": "node --import tsx tools/docsync/index.ts bootstrap",
    "readme:update": "node --import tsx tools/docsync/index.ts update",
    "readme:check": "node --import tsx tools/docsync/index.ts check",
    "knowledge:enable": "mkdir -p state/knowledge && touch state/knowledge/.enabled && echo 'Knowledge system enabled'",
    "knowledge:disable": "rm -f state/knowledge/.enabled && echo 'Knowledge system disabled'",
    "knowledge:extract": "node scripts/extract_knowledge.mjs"
  },
  "devDependencies": {
    "tsx": "^4.7.0",
    "vitest": "^4.0.1"
  },
  "overrides": {
    "esbuild": "0.25.11"
  }
}
