{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "ReportsResponse",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "tenant_id",
    "generated_at",
    "hero_tiles",
    "narratives",
    "trend",
    "schedule",
    "success",
    "context_tags",
    "context_warnings"
  ],
  "properties": {
    "tenant_id": {
      "type": "string",
      "minLength": 1
    },
    "generated_at": {
      "type": "string",
      "format": "date-time"
    },
    "hero_tiles": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/ReportHeroTile"
      }
    },
    "narratives": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/ReportNarrativeCard"
      }
    },
    "trend": {
      "$ref": "#/$defs/ReportTrend"
    },
    "schedule": {
      "$ref": "#/$defs/ReportSchedule"
    },
    "success": {
      "$ref": "#/$defs/ReportSuccessHighlight"
    },
    "context_tags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "data_context": {
      "type": [
        "object",
        "null"
      ]
    },
    "context_warnings": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/ContextWarning"
      }
    }
  },
  "$defs": {
    "ReportHeroTile": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "id",
        "label",
        "value",
        "unit",
        "narrative"
      ],
      "properties": {
        "id": {
          "type": "string"
        },
        "label": {
          "type": "string"
        },
        "value": {
          "type": "number"
        },
        "unit": {
          "type": "string"
        },
        "narrative": {
          "type": "string"
        },
        "delta_pct": {
          "type": [
            "number",
            "null"
          ]
        },
        "delta_value": {
          "type": [
            "number",
            "null"
          ]
        }
      }
    },
    "ReportNarrativeCard": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "id",
        "headline",
        "summary",
        "weather_driver",
        "spend",
        "expected_revenue",
        "confidence",
        "plan_date",
        "category",
        "channel"
      ],
      "properties": {
        "id": {
          "type": "string"
        },
        "headline": {
          "type": "string"
        },
        "summary": {
          "type": "string"
        },
        "weather_driver": {
          "type": "string"
        },
        "spend": {
          "type": "number"
        },
        "expected_revenue": {
          "type": "number"
        },
        "confidence": {
          "type": "string",
          "enum": [
            "HIGH",
            "MEDIUM",
            "LOW"
          ]
        },
        "plan_date": {
          "type": "string",
          "format": "date-time"
        },
        "category": {
          "type": "string"
        },
        "channel": {
          "type": "string"
        }
      }
    },
    "ReportTrend": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "cadence",
        "points"
      ],
      "properties": {
        "cadence": {
          "type": "string"
        },
        "points": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/ReportTrendPoint"
          }
        }
      }
    },
    "ReportTrendPoint": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "date",
        "recommended_spend",
        "weather_index",
        "guardrail_score"
      ],
      "properties": {
        "date": {
          "type": "string",
          "format": "date-time"
        },
        "recommended_spend": {
          "type": "number"
        },
        "weather_index": {
          "type": "number"
        },
        "guardrail_score": {
          "type": "number"
        }
      }
    },
    "ReportSchedule": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "status",
        "cadence",
        "recipients",
        "delivery_format",
        "can_edit"
      ],
      "properties": {
        "status": {
          "type": "string"
        },
        "cadence": {
          "type": "string"
        },
        "recipients": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "delivery_format": {
          "type": "string"
        },
        "next_delivery_at": {
          "type": [
            "string",
            "null"
          ],
          "format": "date-time"
        },
        "last_sent_at": {
          "type": [
            "string",
            "null"
          ],
          "format": "date-time"
        },
        "can_edit": {
          "type": "boolean"
        },
        "time_zone": {
          "type": [
            "string",
            "null"
          ]
        },
        "note": {
          "type": [
            "string",
            "null"
          ]
        }
      }
    },
    "ReportSuccessHighlight": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "headline",
        "summary",
        "metric_label",
        "metric_value",
        "metric_unit",
        "cta_label",
        "cta_href",
        "persona"
      ],
      "properties": {
        "headline": {
          "type": "string"
        },
        "summary": {
          "type": "string"
        },
        "metric_label": {
          "type": "string"
        },
        "metric_value": {
          "type": "number"
        },
        "metric_unit": {
          "type": "string"
        },
        "cta_label": {
          "type": "string"
        },
        "cta_href": {
          "type": "string"
        },
        "persona": {
          "type": "string"
        }
      }
    },
    "ContextWarning": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "code",
        "message",
        "severity",
        "tags"
      ],
      "properties": {
        "code": {
          "type": "string"
        },
        "message": {
          "type": "string"
        },
        "severity": {
          "type": "string"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    }
  }
}
