{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "OnboardingProgressResponse",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "tenant_id",
    "mode",
    "generated_at",
    "connectors",
    "audits"
  ],
  "properties": {
    "tenant_id": {
      "type": "string",
      "minLength": 1
    },
    "mode": {
      "type": "string",
      "enum": [
        "demo",
        "live"
      ]
    },
    "generated_at": {
      "type": "string",
      "format": "date-time"
    },
    "fallback_reason": {
      "type": [
        "string",
        "null"
      ]
    },
    "connectors": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/ConnectorProgress"
      }
    },
    "audits": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/AutomationAudit"
      }
    }
  },
  "$defs": {
    "ConnectorProgress": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "slug",
        "label",
        "status",
        "progress"
      ],
      "properties": {
        "slug": {
          "type": "string"
        },
        "label": {
          "type": "string"
        },
        "status": {
          "type": "string"
        },
        "progress": {
          "type": "integer",
          "minimum": 0,
          "maximum": 100
        },
        "summary": {
          "type": [
            "string",
            "null"
          ]
        },
        "action": {
          "type": [
            "string",
            "null"
          ]
        },
        "updated_at": {
          "type": [
            "string",
            "null"
          ],
          "format": "date-time"
        }
      }
    },
    "AutomationAudit": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "id",
        "status",
        "headline"
      ],
      "properties": {
        "id": {
          "type": "string"
        },
        "status": {
          "type": "string"
        },
        "headline": {
          "type": "string"
        },
        "detail": {
          "type": [
            "string",
            "null"
          ]
        },
        "actor": {
          "type": [
            "string",
            "null"
          ]
        },
        "occurred_at": {
          "type": [
            "string",
            "null"
          ],
          "format": "date-time"
        }
      }
    }
  }
}
