{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "StoriesResponse",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "tenant_id",
    "generated_at",
    "stories",
    "context_tags",
    "context_warnings"
  ],
  "properties": {
    "tenant_id": {
      "type": "string",
      "minLength": 1
    },
    "generated_at": {
      "type": "string",
      "format": "date-time"
    },
    "stories": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/WeatherStory"
      }
    },
    "context_tags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "data_context": {
      "type": [
        "object",
        "null"
      ]
    },
    "context_warnings": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/ContextWarning"
      }
    }
  },
  "$defs": {
    "WeatherStory": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "title",
        "summary",
        "detail",
        "confidence",
        "plan_date",
        "category",
        "channel"
      ],
      "properties": {
        "title": {
          "type": "string"
        },
        "summary": {
          "type": "string"
        },
        "detail": {
          "type": "string"
        },
        "icon": {
          "type": [
            "string",
            "null"
          ]
        },
        "confidence": {
          "type": "string",
          "enum": [
            "HIGH",
            "MEDIUM",
            "LOW"
          ]
        },
        "plan_date": {
          "type": "string",
          "format": "date-time"
        },
        "category": {
          "type": "string"
        },
        "channel": {
          "type": "string"
        }
      }
    },
    "ContextWarning": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "code",
        "message",
        "severity",
        "tags"
      ],
      "properties": {
        "code": {
          "type": "string"
        },
        "message": {
          "type": "string"
        },
        "severity": {
          "type": "string"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    }
  }
}
