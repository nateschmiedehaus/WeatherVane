APP_ENV=dev
LOG_LEVEL=INFO
DATABASE_URL=postgresql+asyncpg://weathervane:weathervane@postgres:5432/weathervane
CORS_ORIGINS=["http://localhost:3000"]

# ==========================================
# CREDENTIALS & API KEYS (NEVER commit!)
# ==========================================
# OpenAI/Codex Credentials
CODEX_HOME=/path/to/.accounts/codex/codex_personal
CLAUDE_CONFIG_DIR=/path/to/.accounts/claude/claude_primary
OPENAI_API_KEY=sk-xxxxx
OPENAI_ORG_ID=org-xxxxx

# Model Providers (Codex Tiers)
# Router lock only permits codex-5-* presets and Claude 4.5/4.1 variants.
CODEX_PROVIDER=codex-5-medium
CODEX_MODEL_REASONING=medium

# Shopify Integration
SHOPIFY_API_KEY=xxxxx
SHOPIFY_API_SECRET=xxxxx
SHOPIFY_WEBHOOK_SECRET=xxxxx

# Credentials Storage
CREDENTIALS_STORAGE_PATH=state/security/credentials.json
CREDENTIALS_ENCRYPTION_KEY=${ENCRYPTION_MASTER_KEY}

# Token Rotation
TOKEN_ROTATION_INTERVAL_DAYS=7
TOKEN_REFRESH_THRESHOLD_HOURS=1
