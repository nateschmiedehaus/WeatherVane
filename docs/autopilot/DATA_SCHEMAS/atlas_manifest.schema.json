{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Atlas Manifest",
  "type": "object",
  "required": ["version", "generated_at", "components", "prompts", "tools", "schemas", "docs"],
  "properties": {
    "version": { "type": "string" },
    "generated_at": { "type": "string" },
    "components": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "card", "code_refs"],
        "properties": {
          "id": { "type": "string" },
          "card": { "type": "string" },
          "code_refs": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["path", "sha256"],
              "properties": {
                "path": { "type": "string" },
                "sha256": { "type": "string" }
              },
              "additionalProperties": false
            }
          },
          "doc_refs": {
            "type": "array",
            "items": { "type": "string" }
          },
          "schema_refs": {
            "type": "array",
            "items": { "type": "string" }
          }
        },
        "additionalProperties": false
      }
    },
    "prompts": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "path", "sha256"],
        "properties": {
          "id": { "type": "string" },
          "path": { "type": "string" },
          "sha256": { "type": "string" }
        },
        "additionalProperties": false
      }
    },
    "tools": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "path"],
        "properties": {
          "name": { "type": "string" },
          "path": { "type": "string" },
          "description": { "type": "string" }
        },
        "additionalProperties": false
      }
    },
    "schemas": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "path", "sha256"],
        "properties": {
          "id": { "type": "string" },
          "path": { "type": "string" },
          "sha256": { "type": "string" }
        },
        "additionalProperties": false
      }
    },
    "docs": {
      "type": "array",
      "items": { "type": "string" }
    }
  },
  "additionalProperties": false
}
