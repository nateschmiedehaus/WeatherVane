{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "modules": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "path",
          "description",
          "stewards",
          "reviewers",
          "ttl_days",
          "last_review",
          "next_review",
          "dependencies",
          "health_signals",
          "status"
        ],
        "properties": {
          "id": { "type": "string" },
          "path": { "type": "string" },
          "description": { "type": "string" },
          "stewards": { "type": "array", "items": { "type": "string" } },
          "reviewers": { "type": "array", "items": { "type": "string" } },
          "ttl_days": { "type": "number" },
          "last_review": { "type": "string" },
          "next_review": { "type": "string" },
          "dependencies": { "type": "array", "items": { "type": "string" } },
          "health_signals": { "type": "array", "items": { "type": "string" } },
          "status": { "type": "string" }
        }
      }
    }
  },
  "required": ["modules"]
}
