{
  "name": "wvo-mcp-server",
  "version": "0.1.0",
  "description": "WeatherVane Orchestrator MCP server for autonomous repo management.",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc --project tsconfig.json",
    "typecheck": "tsc --noEmit --project tsconfig.json",
    "start": "node dist/index.js",
    "start:codex": "node dist/index.js",
    "start:claude": "node dist/index-claude.js",
    "dev": "ts-node src/index.ts",
    "dev:codex": "ts-node src/index.ts",
    "dev:claude": "ts-node src/index-claude.ts",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "test": "node ./scripts/run_vitest.mjs",
    "pretest": "node ./scripts/ensure-sqlite-build.mjs",
    "rebuild:sqlite": "FORCE_SQLITE_REBUILD=1 node ./scripts/ensure-sqlite-build.mjs",
    "simulate:consensus": "node ./scripts/run_consensus_simulation.mjs",
    "register:codex": "codex mcp add weathervane -- node dist/index.js --workspace ../../..",
    "register:claude": "claude mcp add weathervane -- node dist/index-claude.js --workspace ../../..",
    "auto:codex": "npm run build && npm run register:codex && codex session --profile weathervane_orchestrator",
    "auto:claude": "npm run build && npm run register:claude && claude chat --mcp weathervane",
    "providers:smoke": "npm run build && node dist/providers/provider_smoke_test.js",
    "update:prompt-baseline": "node ./dist/scripts/update_prompt_baseline.js",
    "validate:roadmap": "node --import tsx scripts/validate_roadmap.ts --file ../../state/roadmap.yaml",
    "migrate:roadmap": "node --import tsx scripts/migrate_roadmap.ts --file ../../state/roadmap.yaml",
    "validate:roadmap-evidence": "node --import tsx scripts/validate_roadmap_evidence.ts --file ../../state/roadmap.yaml",
    "migrate:roadmap-evidence": "node --import tsx scripts/migrate_roadmap_evidence.ts --file ../../state/roadmap.yaml",
    "enforce:architecture": "node --import tsx scripts/check_architecture_docs.ts --enforce",
    "enforcement:rollout": "node ./scripts/enforcement_rollout.mjs",
    "enforcement:status": "node ./scripts/enforcement_rollout.mjs --status",
    "enforcement:metrics": "node ./scripts/enforcement_metrics.mjs --json",
    "enforcement:dashboard": "node ./scripts/enforcement_metrics.mjs --dashboard --write"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.68.0",
    "@modelcontextprotocol/sdk": "^1.20.0",
    "@types/cli-progress": "^3.11.6",
    "better-sqlite3": "^11.0.0",
    "cli-progress": "^3.12.0",
    "execa": "^8.0.1",
    "openai": "^6.7.0",
    "playwright": "^1.56.0",
    "puppeteer": "^24.24.0",
    "yaml": "^2.4.5",
    "zod": "^3.23.8",
    "zod-to-json-schema": "^3.24.6"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.11",
    "@types/js-yaml": "^4.0.9",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^20.12.7",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "jsdom": "^24.1.0",
    "ts-morph": "^22.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4",
    "vitest": "^3.2.4"
  }
}
