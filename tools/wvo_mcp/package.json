{
  "name": "wvo-mcp-server",
  "version": "0.1.0",
  "description": "WeatherVane Orchestrator MCP server for autonomous repo management.",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc --project tsconfig.json",
    "typecheck": "tsc --noEmit --project tsconfig.json",
    "start": "node dist/index.js",
    "start:codex": "node dist/index.js",
    "start:claude": "node dist/index-claude.js",
    "dev": "ts-node src/index.ts",
    "dev:codex": "ts-node src/index.ts",
    "dev:claude": "ts-node src/index-claude.ts",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "test": "node ./scripts/run_vitest.mjs",
    "pretest": "node ./scripts/ensure-sqlite-build.mjs",
    "rebuild:sqlite": "FORCE_SQLITE_REBUILD=1 node ./scripts/ensure-sqlite-build.mjs",
    "simulate:consensus": "node ./scripts/run_consensus_simulation.mjs",
    "register:codex": "codex mcp add weathervane -- node dist/index.js --workspace ../../..",
    "register:claude": "claude mcp add weathervane -- node dist/index-claude.js --workspace ../../..",
    "auto:codex": "npm run build && npm run register:codex && codex session --profile weathervane_orchestrator",
    "auto:claude": "npm run build && npm run register:claude && claude chat --mcp weathervane",
    "providers:smoke": "npm run build && node dist/providers/provider_smoke_test.js",
    "analyze:outcomes": "node --import tsx ./scripts/analyze_outcomes.ts",
    "analyze:feedback-loops": "node --import tsx ./scripts/analyze_feedback_loops.ts",
    "module:generate": "npx tsx ./scripts/generate_module_index.ts",
    "module:validate": "npx tsx ./scripts/validate_module_index.ts",
    "entropy:capture": "npx tsx ./scripts/capture_entropy_snapshot.ts",
    "entropy:validate": "npx tsx ./scripts/validate_entropy_log.ts",
    "gate:review": "node --loader ts-node/esm ./src/cli/run_design_review.ts",
    "strategy:review": "npx tsx ./scripts/run_strategy_review.ts",
    "think:review": "npx tsx ./scripts/run_thinking_review.ts",
    "spec:review": "node --loader ts-node/esm ./src/cli/run_spec_review.ts",
    "plan:review": "node --loader ts-node/esm ./src/cli/run_plan_review.ts",
    "work-process:check": "node ./scripts/check_work_process_artifacts.mjs",
    "wave0": "node ./scripts/run_wave0.mjs",
    "verify": "node dist/executor/verify.js",
    "commit:check": "node ./scripts/enforce_commits.mjs --check",
    "commit:enforce": "node ./scripts/enforce_commits.mjs --enforce",
    "commit:watch": "node ./scripts/enforce_commits.mjs --watch"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.20.0",
    "@types/cli-progress": "^3.11.6",
    "better-sqlite3": "^11.0.0",
    "cli-progress": "^3.12.0",
    "execa": "^8.0.1",
    "playwright": "^1.56.0",
    "puppeteer": "^24.24.0",
    "yaml": "^2.4.5",
    "zod": "^3.23.8",
    "zod-to-json-schema": "^3.24.6"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.11",
    "@types/glob": "^8.1.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.12.7",
    "@types/semver": "^7.7.1",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "ts-morph": "^22.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4",
    "vitest": "^3.2.4"
  },
  "overrides": {
    "glob": "^10.3.12",
    "rimraf": "^5.0.5"
  }
}
